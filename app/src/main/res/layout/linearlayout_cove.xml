<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       tools:parentTag="android.widget.LinearLayout"
>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Add all user details"
              android:fontFamily="@font/proxima_nova_alt_light"
    >

    </TextView>
    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:gravity="center"
                  android:orientation="horizontal"
                  android:layout_weight="2"
    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="end|bottom"
                  android:layout_marginBottom="2.2dp"
                  android:text="Enter Details"
                  android:fontFamily="@font/proxima_nova_regular"
        />
        <EditText android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="end|center_vertical"
                  android:layout_weight="1"
        />
        <Spinner android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_gravity="end|center_vertical"
                 android:layout_weight="1"
        />
    </LinearLayout>
</merge>